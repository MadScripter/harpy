{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Harpy",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "harpy",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": false,
                "maximizable": false,
                "title": "Harpy",
                "width": 1024,
                "maxWidth": 1024,
                "height": 768,
                "maxHeight": 768,
                "center": true,
                "fileDropEnabled": false,
                "transparent": true,
                "decorations": false
            }
        ]
    }
}